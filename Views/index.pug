              img.m-flower(src="/assets/mobile-design/notif-m/flower-a-mobile.png", alt="")

              .open-trigger.open-trigger-m

            // MOBILE OPEN MESSAGE SCREEN
            .screen.screen-message-open.screen-message-open-m
              img.mobile-bg(src="/assets/mobile-design/mobile-background.png", alt="")

              img.m-msgbox(src="/assets/mobile-design/text-m/msg-box-mobile.png", alt="")
              img.m-flowerb(src="/assets/mobile-design/text-m/flower-b-mobile.png", alt="")
              img.m-starb(src="/assets/mobile-design/text-m/star-b-mobile.png", alt="")

              p.letter-text.letter-text-m
                | Hiii Beboo!
                br
                | Merry Christmas!!
                br
                br
                | I love you more than all the presents
                br
                | under the Christmas tree hehe
                br
                br
                | I think Snoopy needs help getting
                br
                | dressed for the winter!
                br
                br
                | Love,
                br
                | Your Big Sister

              img.okay-btn.okay-btn-m(src="/assets/mobile-design/text-m/okay-btn-mobile.png", alt="")

            // MOBILE GAME SCREEN  (FIXED INDENTATION)
            .screen.screen-game.screen-game-m
              img.mobile-bg(src="/assets/gameing-screen/gaming-background.png", alt="")

              .game-ui
                img.gaming-logo(src="/assets/gameing-screen/gaming-logo.png", alt="Snoopy Style Studio")
                img.exit-btn(src="/assets/gameing-screen/exit-cloud.png", alt="Exit")
                img.reset-btn(src="/assets/gameing-screen/reset-cloud.png", alt="Reset")
