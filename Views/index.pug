extends layout

block content
  .app
    .scene

      // =========================
      // DESKTOP UI
      // =========================
      .desktop-ui#desktopUI

        // MAIN SCREEN (desktop)
        .screen.screen-main
          .title-area
            h1.title-text SNOOPY
            p.subtitle style studio

            img.dcloud(src="/assets/title/dark_purple_backgrd_cloud.png", alt="")
            img.lcloud(src="/assets/title/light_purple_cloud.png", alt="")

            img.santahat(src="/assets/title/santa_hat.png", alt="")
            img.star.star-1(src="/assets/title/star-1.png", alt="")
            img.star.star-2(src="/assets/title/star-2.png", alt="")
            img.heart(src="/assets/title/purple_heart_smiling.png", alt="")

          .character
            img.snoopy(src="/assets/characters/snoopy-menu.png", alt="Snoopy")

          .play-button
            img.whole-play-button(src="/assets/play-button/whole-play-button.png", alt="")
            img.gift(src="/assets/play-button/gift.png", alt="")
            img.star.starr(src="/assets/play-button/Star.png", alt="")
            img.star.star7(src="/assets/play-button/star-7.png", alt="")
            img.star.starb(src="/assets/play-button/star-b.png", alt="")

          .gift-tag
            img.purple-tag(src="/assets/gift-tag/tag-hole.png", alt="")
            img.star.star-a(src="/assets/gift-tag/star-a.png", alt="")
            img.star.star-3(src="/assets/gift-tag/star-3.png", alt="")
            img.tag-flwr(src="/assets/gift-tag/tag-flwr.png", alt="")
            img.key(src="/assets/gift-tag/key.png", alt="")

          .tag-text
            p For Andrea ♡
            p Love,
            p your big sister

        // MESSAGE SCREEN (desktop)
        .screen.screen-message
          .message-wrap
            img.message-bubble(src="/assets/notification-message/mes-box-empty.png", alt="Message")

            .open-trigger
              img.o-button(src="/assets/notification-message/o-button.png", alt="")
              p.message-sub tap to open...

            img.bell(src="/assets/notification-message/bell.png", alt="")
            img.flower(src="/assets/notification-message/flower.png", alt="")

            p.message-title you have a message from
            p.message-title2 your sister!
            p.mess MESSAGES (1)

        // OPENED MESSAGE SCREEN (desktop)
        .screen.screen-message-open
          .letter-wrap
            img.message-center(src="/assets/notification-message/sister-mes/message-center.png", alt="Letter")

            p.from FROM:  SISTER 

            p.letter-text
              | Hiii Beboo!
              br
              | Merry Christmas!!
              br
              br
              | I love you more than all the presents
              br
              | under the Christmas tree hehe
              br
              |
              br
              | I think Snoopy needs help getting 
              br
              | dressed for the winter!
              br
              br
              | Love,
              br
              | Your Big Sister 

            img.okay-btn(src="/assets/notification-message/sister-okay/okay-cat.png", alt="")

            img.flw-d(src="/assets/notification-message/sister-mes/flower-d.png", alt="")
            img.s-d(src="/assets/notification-message/sister-mes/star-d.png", alt="")

      // =========================
      // MOBILE UI (we’ll build next)
      // =========================
      .mobile-ui#mobileUI
        // (leave empty for now)
